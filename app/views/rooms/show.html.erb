<div class="row mt-3">
  
  <div class="col-md-8">
    <div>
      <% if @room.room_img? %>
        <img src="<%= @room.room_img.url %>"  class="room_img">
      <% else %>
        <%= image_tag "default_room_img.png" %>
      <% end %>
    </div>
    <div class="row">
      <div class="col-md-2">
        <a href="<%= user_path(@room.user)%>">
          <img src="<%= @room.user.user_img.url %>" alt="登録者:<%= "\n" + @room.user.user_name %>" class="rounded-circle room_user_img">
        </a>
      </div>
      <div class="col-md-10 room_name_address">
        <h3><%= @room.room_name %></h3>
        <p><%= @room.room_address%></p>
      </div>
    </div>
    <div class="border-top p-3 m-1">
      <p><%= @room.room_intro %></p>
    </div>
  </div>
  
  <div class="col-md-4 border rounded p-3">
    <h2 class="font-weight-bold">&yen;<%= @room.room_fee%> <span class="small"> / 日</span></h2>
    <% if session[:user_id].present? %>
      <%= render "shared/errors", obj: @reservation %>

      <%= form_with model: @reservation, url: confirm_reservation_path, local:true do |f| %>
      
        <div class="form-group">
          <label>開始日</label>
          <%= f.date_field :start_date, :placeholder => "開始日を指定",class: "form-control"%>
        </div>
        
        <div class="form-group">
          <label>終了日</label> 
          <%= f.date_field :end_date, :placeholder => "終了日を指定", class: "form-control"%>
        </div>
      
        <div class="form-group">
          <label>利用人数</label>
          <%= f.number_field :total_users, :placeholder => "利用人数を入力", class: "form-control"%>
        </div>
        
        <%= f.hidden_field :room_id, value: @room.id %>
        <%= f.hidden_field :user_id, value: session[:user_id] %>
  
        <%= f.submit "予約する", class: "btn btn-primary" %>
      <% end %>
    <% else %>
      <div class="alert alert-info">
        <h4 class="alert-heading">予約にはログインが必要です</h4>
        <hr>
        <p>予約する場合には画面上部のツールバーからログインをお願いします</p>
      </div>
    <% end %>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div>
    <%= link_to "ルーム一覧に戻る", rooms_path, class: "btn btn-secondary" %>
  </div>
  <% if session[:user_id].present? && session[:user_id] == @room.user_id %>
    <div class="ml-3">
      <%= link_to "ルーム情報を編集する", edit_room_path(@room), class: "btn btn-info" %>
    </div>
  <% end %>      
</div>
