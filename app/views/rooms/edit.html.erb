<h1>ルーム登録情報編集</h1>

<%= render "shared/errors", obj: @room %>


<%= form_with model: @room, local:true, method: "patch" do |f| %>

  <div class="form-group">
    <label>ルーム名</label>
    <%= f.text_field :room_name, :placeholder => "ルーム名を入力", class: "form-control"%>
  </div>
  
  <div class="form-group">
    <label>住所</label> 
    <%= f.text_field :room_address, :placeholder => "住所を入力", class: "form-control"%>
  </div>

  <div class="form-group">
    <label>料金</label>
    <%= f.number_field :room_fee, :placeholder => "1日の1人当たりの料金を入力", class: "form-control"%>
  </div>

  <div class="form-group">
    <label>ルーム紹介</label>    
    <%= f.text_area :room_intro, :placeholder => "ルーム紹介文を入力", class: "form-control"%>
  </div>
  
  <div class="form-group">
    <label>ルーム画像</label>
    <%= f.file_field :room_img, accept: 'image/jpeg,image/gif,image/png', class: "form-control"%>
  </div>

  <%= f.submit "更新", class: "btn btn-primary" %>
  <div class="text-right mb-3">
      <%= link_to "ルーム情報を削除する", room_path, method: "delete", 
          data: {confirm: "本当に削除しますか？"}, class: "btn btn-danger" %>
  </div>
<% end %>