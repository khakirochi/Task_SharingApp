<h1>新規アカウント作成</h1>
<%= render "shared/errors", obj: @user %>

<%= form_with model: @user, url: signup_path, local: true do |f| %>
<div class="form-group">
  <label>ユーザ名</label>
  <%= f.text_field :user_name, placeholder: "半角英数字とアンダースコアで20文字以下", class: "form-control" %>
</div>

<div class="form-group">
  <label>メールアドレス</label>
  <%= f.text_field :email, placeholder: "メールアドレス", class: "form-control" %>
</div>

<div class="form-group">
  <label>パスワード</label>
  <%= f.password_field :password, placeholder: "半角英数字とアンダースコアで8文字以上", class: "form-control" %>
</div>

<div class="form-group">
  <label>パスワード(確認用)</label>
  <%= f.password_field :password_confirmation, placeholder: "確認のために同じパスワードを入力", class: "form-control" %>
</div>

<%= f.submit "新しいアカウントを作成", class: "btn btn-primary" %>

<% end %>