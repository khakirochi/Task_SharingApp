<h2>プロフィール編集</h2>

<div class="row">
  <div class="col-5 px-3">
    <%= render "shared/user_img", obj: @user %>
  </div>
  <div class="col-7">
    <%= render "shared/errors", obj: @user %>

    <%= form_with model: @user, url: update_profile_path, local:true do |f| %>
    <div class="form-group">
      <label class="h5" >アイコン画像</label><span class="small text-secondary"> (変更する場合には指定してください)</span>
      <%= f.file_field :user_img, accept: 'image/jpeg,image/gif,image/png', class: "form-control" %>
    </div>
  
    <div class="form-group">
      <label class="h5">ユーザ名</label> 
      <%= f.text_field :user_name, class: "form-control" %>
    </div>
  
    <div class="form-group">
      <label class="h5">自己紹介</label>    
      <%= f.text_area :user_intro, class: "form-control" %>
    </div>

    <hr>
    
    <%= f.submit "更新", class: "btn btn-primary" %>
    <%= link_to "設定に戻る", settings_path, class: "btn btn-secondary" %>

    <% end %>  
  </div>
</div>

